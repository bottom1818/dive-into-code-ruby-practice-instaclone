<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

   <h3>以下の内容で、送信する。</h3>
    <%= form_for(@instaclone_content, url: instaclone_contents_path) do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :image %>
      <%= f.hidden_field :content %>
      <p>タイトル:<%= @instaclone_content.title %></p>
      
      <p>画像:<%= image_tag(@instaclone_content.image) %>
      <%= hidden_field_tag :"cache[image]",@instaclone_content.image.cache_name %>
      
      <p>コメント:<%= @instaclone_content.content %></p>
      <%= f.submit "登録", class: 'btn btn-primary btn-block' %>
    
   <% end %>
      
    <%= form_for(@instaclone_content, url: new_instaclone_content_path, method: 'get') do |f| %>
      <%= f.hidden_field :title %>
      <%= hidden_field_tag :"cache[image]",@instaclone_content.image.cache_name %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>

